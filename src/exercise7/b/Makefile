CXX = g++
CXXFLAGS = -ggdb3 -Wall -Werror -Wno-unused -std=c++11
LDFLAGS = -Wl,-rpath,/usr/local/lib

OPTIMIZATION_LEVEL ?= -O2

OPENCV_INCDIR = /usr/local/include/opencv4
OPENCV_LIBDIR = /usr/local/lib
OPENCV_LIBS = -lopencv_core -lopencv_imgproc -lopencv_highgui -lopencv_imgcodecs

# Exercise 02b variables
EXERCISE_02B_PREFIX = exercise_02b
EXERCISE_02B_TARGET = $(EXERCISE_02B_PREFIX)_compare
EXERCISE_02B_COMPILATION_FILES_FOLDER = $(EXERCISE_02B_TARGET).dSYM
EXERCISE_02B_SOURCE = $(EXERCISE_02B_PREFIX)_compare.cpp
OUTPUT_FILE = $(EXERCISE_02B_PREFIX)_output_01.txt

# Exercise 06b variables
EXERCISE_06B_PREFIX = exercise_06b
EXERCISE_06B_TARGET = $(EXERCISE_06B_PREFIX)_opening_closing
EXERCISE_06B_SOURCES = $(EXERCISE_06B_TARGET).cpp erosion.cpp dilation.cpp opening.cpp closing.cpp
EXERCISE_06B_OBJECTS = $(EXERCISE_06B_SOURCES:.cpp=.o)
EXERCISE_06B_HEADERS = erosion.hpp dilation.hpp opening.hpp closing.hpp
EXERCISE_06B_COMPILATION_FILES_FOLDER = $(EXERCISE_06B_TARGET).dSYM
INPUT_IMAGE ?= $(EXERCISE_06B_PREFIX)_input_01.pgm
OUTPUT_IMAGE_1 = $(EXERCISE_06B_PREFIX)_output_01.pgm
OUTPUT_IMAGE_2 = $(EXERCISE_06B_PREFIX)_output_02.pgm
SIZE ?= 1

.PHONY: all exercise_02b exercise_06b run_02b run_06b clean clean_02b clean_06b

all: exercise_02b exercise_06b

exercise_02b: $(EXERCISE_02B_TARGET)

exercise_06b: $(EXERCISE_06B_TARGET)

$(EXERCISE_02B_TARGET): $(EXERCISE_02B_SOURCE)
	$(CXX) $(CXXFLAGS) $(OPTIMIZATION_LEVEL) $(LDFLAGS) -o $@ $< -I$(OPENCV_INCDIR) -L$(OPENCV_LIBDIR) $(OPENCV_LIBS)

$(EXERCISE_06B_TARGET): $(EXERCISE_06B_OBJECTS)
	$(CXX) $(CXXFLAGS) $(OPTIMIZATION_LEVEL) $(LDFLAGS) -o $@ $^ -I$(OPENCV_INCDIR) -L$(OPENCV_LIBDIR) $(OPENCV_LIBS)

%.o: %.cpp $(EXERCISE_06B_HEADERS)
	$(CXX) $(CXXFLAGS) $(OPTIMIZATION_LEVEL) -c -o $@ $< -I$(OPENCV_INCDIR)

run: $(EXERCISE_06B_TARGET) $(EXERCISE_02B_TARGET)
	./$(EXERCISE_06B_TARGET) $(SIZE) $(INPUT_IMAGE) $(OUTPUT_IMAGE_1) && \
	./$(EXERCISE_06B_TARGET) $(SIZE) $(OUTPUT_IMAGE_1) $(OUTPUT_IMAGE_2) && \
	./$(EXERCISE_02B_TARGET) $(OUTPUT_IMAGE_1) $(OUTPUT_IMAGE_2)

clean: clean_02b clean_06b

clean_02b:
	rm -rf $(EXERCISE_02B_TARGET) $(EXERCISE_02B_COMPILATION_FILES_FOLDER) $(OUTPUT_FILE)

clean_06b:
	rm -rf $(EXERCISE_06B_TARGET) $(EXERCISE_06B_OBJECTS) $(EXERCISE_06B_COMPILATION_FILES_FOLDER) $(OUTPUT_IMAGE_1) $(OUTPUT_IMAGE_2)
